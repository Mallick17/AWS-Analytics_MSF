<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>aws-deployment</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- Main entry point -->
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>streaming_job.py</include>
                <include>application_properties.json</include>
            </includes>
        </fileSet>
        
        <!-- Configuration files -->
        <fileSet>
            <directory>${project.basedir}/config</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>**/*.yaml</include>
            </includes>
        </fileSet>
        
        <!-- Transformation modules -->
        <fileSet>
            <directory>${project.basedir}/transformations</directory>
            <outputDirectory>transformations</outputDirectory>
            <includes>
                <include>**/*.py</include>
            </includes>
        </fileSet>
        
        <!-- Flink jobs and common modules -->
        <fileSet>
            <directory>${project.basedir}/flink</directory>
            <outputDirectory>flink</outputDirectory>
            <includes>
                <include>**/*.py</include>
            </includes>
            <excludes>
                <exclude>tests/**</exclude>
            </excludes>
        </fileSet>
        
        <!-- Dependencies JAR -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>pyflink-dependencies.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
