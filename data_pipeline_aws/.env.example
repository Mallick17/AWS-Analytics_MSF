# ============================================================================
# DEPLOYMENT ENVIRONMENT
# ============================================================================
# Set to 'local' for Docker development, 'aws' for AWS Managed Flink
DEPLOYMENT_ENV=local

# ============================================================================
# AWS CONFIGURATION (for AWS deployment)
# ============================================================================
# AWS S3 Tables ARN (required for AWS deployment)
AWS_S3_TABLES_ARN=arn:aws:s3tables:ap-south-1:123456789012:bucket/my-bucket
AWS_REGION=ap-south-1

# AWS MSK (Managed Streaming for Kafka)
AWS_MSK_BOOTSTRAP_SERVERS=b-1.msk-cluster.kafka.ap-south-1.amazonaws.com:9098

# ============================================================================
# LOCAL CONFIGURATION (for local Docker development)
# ============================================================================
# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_TOPIC_ORDERS=orders.created.v1
KAFKA_CONSUMER_GROUP=flink-order-ingest

# Iceberg
ICEBERG_CATALOG_NAME=local
ICEBERG_WAREHOUSE=file:///opt/iceberg/warehouse
ICEBERG_NAMESPACE=analytics

# Flink Runtime
FLINK_PARALLELISM=1
FLINK_CHECKPOINT_INTERVAL=10000
FLINK_CHECKPOINT_DIR=file:///opt/flink/checkpoints
