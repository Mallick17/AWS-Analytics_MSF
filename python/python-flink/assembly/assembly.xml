<!-- Updated assembly.xml to include all Python files -->
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>my-assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>streaming_job.py</include>
                <include>config.py</include>
                <include>utils.py</include>
                <include>environment.py</include>
                <include>catalog.py</include>
                <include>source.py</include>
                <include>sink.py</include>
                <include>transformations.py</include>
                <include>requirements.txt</include>
                <include>application_properties.json</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>pyflink-dependencies.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>